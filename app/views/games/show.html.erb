<h1>Games#show</h1>
<p>Find me in app/views/games/show.html.erb</p>


<div class="status-message">
  <% case @status %>
  <% when "draw" %>
    GAME IS A DRAW
  <% when "X" %>
    X WINS!
  <% when "O" %>
    O WINS!
  <% when false %>
    <% nil %>
  <% end %>
</div>
 
<% if @computer_turn && @status==false %>
  <div class="computer-button">
    <%= form_for(@move) do |f| %>
      <%= f.hidden_field :game_id, value: params[:id] %>
      <%= f.hidden_field :move_coordinate, value: @computer_move %>
      <%= f.submit "computer move" %>
    <% end %>
  </div>
<% else %>
  <% nil %>
<% end %>

<div class="ttt-board">
  <% @board.each_with_index do |cell, index| %>
  <% if cell == 0 %>
    <%= form_for(@move) do |f| %>
      <%= f.hidden_field :game_id, value: params[:id] %>
      <%= f.hidden_field :move_coordinate, value: index %>
      <%= f.submit " ", class: "ttt-cell" %>
    <% end %>
  <% elsif cell == -1 %>
    <div class="ttt-cell">X</div>
  <% else %>
    <div class="ttt-cell">O</div>
  <% end %>

  <% end %> 
</div>




















